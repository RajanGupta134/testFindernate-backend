{
  "name": "findernate-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "start:cluster": "pm2-runtime start ecosystem.config.cjs --env production",
    "build": "echo 'Build completed - Node.js project ready for deployment'",
    "db:indexes": "node src/scripts/createIndexes.js",
    "db:indexes:list": "node -e \"import('./src/scripts/createIndexes.js').then(({listExistingIndexes}) => listExistingIndexes())\"",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs findernate-backend",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit"
  },
  "author": "",
  "license": "ISC",
  "keywords": [
    "social-media",
    "backend",
    "express",
    "mongodb"
  ],
  "description": "Backend API for FinderNate social media application",
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "@stream-io/node-sdk": "^0.7.15",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.5.0",
    "form-data": "^4.0.4",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "md-to-pdf": "^5.2.4",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7"
  },
